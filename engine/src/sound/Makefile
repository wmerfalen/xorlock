CXX=g++-10
GDB_FLAGS = -ggdb -g
DEBUG_FLAGS=-DSHOW_RETICLE=1 \
						-DDRAW_SPETSNAZ_PREFIRE_LINE=1 \
						-DDRAW_COLLISIONS=1 \
						-DSHOW_PATHFINDER_ANIMATE=1
SUFFIX_FLAGS=-lSDL2 -lSDL2_ttf -lSDL2_mixer
DEBUG_FLAGS=
#GDB_FLAGS=
BUILD_DIR=build
C_STD_FLAGS=-std=c++20 -ISDL_ttf -LSDL_ttf/build -DSHOW_HELPFUL_GRAPH_STUFF=1
INCLUDES_FLAGS=

all: 
	$(CXX) $(DEBUG_FLAGS) $(GDB_FLAGS) $(C_STD_FLAGS)  \
		$(INCLUDES_FLAGS) \
		./playwave.c -o ./pwave \
		$(SUFFIX_FLAGS)
